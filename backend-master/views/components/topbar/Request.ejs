        top: 40px;
        right: 0px;
        background: white;
        z-index: 2;
    }
    
    .RequestBottom {
        flex-grow: 1;
        overflow: auto;
        border: 1px solid lightgray;
    }
    
    .CloseRequest {
        text-align: right;
        margin-bottom: 5px;
    }
    
    .RequestSearch {
        padding: 5px 0px;
    }
    
    .RequestSearch input {
        box-sizing: border-box;
        width: 100%;
        height: 25px;
        border: 1px solid black;
    }
    
