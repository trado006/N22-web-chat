<style>
    .RequestContainer {
        width: 300px;
        min-height: 50px;
        max-height: 400px;
        border: 1px solid lightgray;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        display-regular: flex;
        display: none;
        flex-direction: column;
        padding: 10px;
